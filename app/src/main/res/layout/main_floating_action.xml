<?xml version="1.0" encoding="utf-8"?>
<com.getbase.floatingactionbutton.FloatingActionsMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fab"
    fab:fab_addButtonColorNormal="@color/pink"
    fab:fab_addButtonColorPressed="@color/pink_pressed"
    fab:fab_addButtonPlusIconColor="@color/half_black"
    fab:fab_labelStyle="@style/menu_labels_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/fab_margin"
>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_action_camera"
        fab:fab_colorNormal="@color/green"
        fab:fab_colorPressed="@color/green_pressed"
        fab:fab_icon="@android:drawable/ic_menu_camera"
        fab:fab_title="@string/action_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_action_share"
        fab:fab_colorNormal="@color/blue"
        fab:fab_colorPressed="@color/blue_pressed"
        fab:fab_icon="@android:drawable/ic_menu_share"
        fab:fab_title="@string/action_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</com.getbase.floatingactionbutton.FloatingActionsMenu>